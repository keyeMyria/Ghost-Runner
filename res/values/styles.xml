<?xml version="1.0" encoding="utf-8"?>
<resources>

<!-- ==================== THEMES  ========================================================================= -->

<!-- The Theme of the GhostRunner Application -->
 <style name="GhostRunnerTheme" parent="android:Theme.Black">
    <item name="android:windowNoTitle">true</item>
    <item name="android:textColor">@color/normalText</item>
    <!--<item name="android:typeface"></item>-->
  </style>  
  
<!-- ==================== STYLES  ========================================================================= -->  
 
<style name="ListHeading">
	<item name="android:textColor">@color/listHeading</item>
	<item name="android:textSize">17sp</item>
</style>

<style name="ListDetail">
	<item name="android:textColor">@color/listDetail</item>
	<item name="android:textSize">14sp</item>
</style>

<style name="HistoryMonth">
	<!-- <item name="android:textColor">@color/historyMonth</item>  -->
	<item name="android:textSize">19sp</item>
	<item name="android:textColor">@color/heading</item>
	<item name="android:textStyle">bold</item>
</style>

<style name="HistoryDetails">
	<item name="android:textSize">14sp</item>
	<item name="android:textColor">@color/normalText</item>
</style>
 
<style name="Heading">
	<item name="android:textSize">19sp</item>
	<item name="android:textColor">@color/heading</item>
	<item name="android:background">@drawable/header_small</item>
	<item name="android:padding">10dip</item>
	<item name="android:textStyle">bold</item>
</style>

<style name="RunningInfoBig">
	<item name="android:textSize">30sp</item>
	<item name="android:textColor">@color/heading</item>
	<item name="android:padding">10dip</item>
	<item name="android:textStyle">bold</item>
</style>
 
<style name="RunningInfoSmall">
	<item name="android:textSize">17sp</item>
	<item name="android:textColor">@color/heading</item>
	<item name="android:padding">3dip</item>
	<item name="android:textStyle">bold</item>
</style>
</resources>
